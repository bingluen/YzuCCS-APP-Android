<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="@color/slidingMenuBackground"
    android:gravity="left"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/sliding_menu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/myCourseTableTitleText"
            android:id="@+id/myCourseTableListTitle"
            android:textColor="@color/menuListTitle"
            android:gravity="center_vertical"
            android:textSize="@dimen/myCourseTableTitleTextSize"
            android:padding="@dimen/myCourseTableTitleTextPadding"
            android:drawableLeft="@drawable/ic_person_white_24dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/horizontalLineThickness"
            android:background="@color/horizontalLineColor"
            android:layout_margin="@dimen/horizontalLineMargin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_myCourseTableListItems"
            android:orientation="vertical"></LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addTableButton"
            android:textColor="@color/menuButtonText"
            android:textSize="@dimen/myCourseTableListTextSize"
            android:background="@null"
            android:drawableLeft="@drawable/ic_add_box_grey600_18dp"
            android:id="@+id/addTable" />

    </LinearLayout>
</LinearLayout>
